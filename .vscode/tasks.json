{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc etkin dosyayı derle",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Ilibft",
                "-Ift_printf",
                "-L./include/libft",
                "-L./include/ft_printf",
                "-lft",
                "-lftprintf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Hata Ayıklayıcısı tarafından oluşturulan görev."
        }
    ],
    "version": "2.0.0"
}

